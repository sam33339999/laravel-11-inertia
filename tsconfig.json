{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "bundler",
      "strict": true,
      "jsx": "preserve",
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["resources/*"]
      },
      "lib": ["esnext", "dom", "dom.iterable"],
      "types": ["vite/client", "@types/node"]
    },
    "include": [
      "resources/**/*.ts",
      "resources/**/*.d.ts",
      "resources/**/*.tsx",
      "resources/**/*.vue"
    ]
  }
